# Rely on server's last modified date
timestamping = on

# No upwards traversal during recursive operations
no_parent = on

timeout = 30
tries = 3
retry_connrefused = on

# Derive local file name from last component of redirection URL
trust_server_names = on

# Don't navigate to FTP pages from HTTP
follow_ftp = off

# Add missing file extensions based upon MIME type
adjust_extensions = on

# Ignore robots.txt and meta instructions
robots = off

# Print HTTP responses
server_response = on

# Pretend to be a Win10 desktop running Edge
user_agent = Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/42.0.2311.135 Safari/537.36 Edge/12.246
